from tkinter import *
import random
root = Tk()
root.geometry("1000x1000")

COLS = 10
ROWS = 10
ISLAND_CHANCE = 15

for i in range(COLS):
    root.columnconfigure(i)

for i in range(ROWS):
    root.rowconfigure(i)

oce = []
for i in ("Ocean1.gif", "Ocean2.gif", "Ocean3.gif"):
    oce.append(PhotoImage(file=i)) 
ild = []
for i in ("Island1.gif", "Island2.gif"):
    ild.append(PhotoImage(file=i)) 

tiles = {}
Xident = 0
Yident = 0

for tile_no in range(ROWS*COLS):
    Tile = Label(root)
    a = random.randint(0,99)
    if a < ISLAND_CHANCE:
        Tile.image = random.choice(ild)
    else:
        Tile.image = random.choice(oce)
    Tile.grid(row=Xident, column=Yident)
    tiles[tile_no] = Tile
    Xident += 1
    elif Xident >= COLS:
        Xident = 0
        Yident += 1

root.mainloop()
